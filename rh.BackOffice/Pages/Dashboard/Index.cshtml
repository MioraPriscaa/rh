@page

@model rh.BackOffice.Pages.Dashboard.IndexModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard</h2>

<!-- Filtre -->
<div class="mb-4 d-flex align-items-center">
    <label class="me-2 fw-semibold">Filtrer :</label>
    <form method="get" class="d-inline">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                @(Model.Filters.FirstOrDefault(f => f.Value == Model.CurrentFilter).Label ?? "Tous")
            </button>
            <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                @foreach (var f in Model.Filters)
                {
                    <li>
                        <button type="submit" name="filter" value="@f.Value" class="dropdown-item">
                            @f.Label
                        </button>
                    </li>
                }
            </ul>
        </div>
    </form>
    

</div>
<h4 class="mb-4 text-primary">
    @(Model.Filters.FirstOrDefault(f => f.Value == Model.CurrentFilter).Label ?? "Tous")
</h4>


<!-- Annonces -->
<div class="row g-4">
    @foreach (var annonce in Model.TopAnnonces)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded hover-shadow">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate">@annonce.Libelle</h5>
                    <p class="card-text mb-3">
                        <span class="badge bg-success fs-6">@annonce.NombreCandidatures @((annonce.NombreCandidatures > 1) ? "candidatures" : "candidature")</span>
                    </p>
                    <div class="mt-auto">
                        <a asp-page="/Annonces/Details"
                           asp-route-id="@annonce.AnnonceId"
                           class="btn btn-primary w-100 fw-semibold">
                            Voir l’annonce
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Hover effect pour les cartes */
    .hover-shadow:hover {
        transform: translateY(-4px);
        transition: all 0.2s ease-in-out;
        box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.15) !important;
    }
</style>
