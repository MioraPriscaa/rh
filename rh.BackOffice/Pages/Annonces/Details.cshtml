<h4>Candidats ayant postulé</h4>

@if (Model.Candidats.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidat in Model.Candidats)
            {
                <tr>
                    <td>@candidat.Nom</td>
                    <td>@candidat.Prenom</td>
                    <td>@candidat.Email</td>
                    <td>@Model.Annonce.Candidatures.First(c => c.IdCandidat == candidat.Id).Statut.Libelle</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucun candidat n'a postulé pour cette annonce.</p>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Annonce.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
