@page
@model rh.BackOffice.Pages_Annonces.DeleteModel

@{
    ViewData["Title"] = "Supprimer une annonce";
}

<h1 class="mb-4 text-danger">Supprimer une annonce</h1>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-danger text-white">
        <strong>Annonce à supprimer</strong>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Libellé</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.Libelle)</dd>

            <dt class="col-sm-4 fw-semibold">Description</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.Description)</dd>

            <dt class="col-sm-4 fw-semibold">Compétences requises</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.CompetenceRequis)</dd>

            <dt class="col-sm-4 fw-semibold">Type de contrat</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.TypeContrat.Libelle)</dd>

            <dt class="col-sm-4 fw-semibold">Mode de travail</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.ModeTravail.Libelle)</dd>

            <dt class="col-sm-4 fw-semibold">Durée</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.Duree)</dd>

            <dt class="col-sm-4 fw-semibold">Dossiers validés</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.NbDossierValide)</dd>

            <dt class="col-sm-4 fw-semibold">Niveau d'expérience</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.NiveauExperience)</dd>

            <dt class="col-sm-4 fw-semibold">Localisation</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.Localisation)</dd>

            <dt class="col-sm-4 fw-semibold">Date de fin</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Annonce.DateFin)</dd>
        </dl>

        <form method="post" class="mt-4 d-flex gap-2">
            <input type="hidden" asp-for="Annonce.Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Retour à la liste</a>
        </form>
    </div>
</div>
