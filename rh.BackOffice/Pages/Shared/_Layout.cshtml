<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - rh.BackOffice</title>

		<!-- Variables du template (optionnel) -->
		@await Html.PartialAsync("Sections/_Variables")

		<!-- Styles du template -->
		<partial name="Sections/_Styles" />

		<!-- Vos styles -->
		<link rel="stylesheet" href="~/rh.BackOffice.styles.css" asp-append-version="true" />

		@RenderSection("VendorStyles", required: false)
		@RenderSection("PageStyles", required: false)
	</head>
	<body>
		@{
		// Valeurs par défaut
		bool isNavbar = ViewData["isNavbar"] as bool? ?? true;
		bool isMenu = ViewData["isMenu"] as bool? ?? true;
		bool isFooter = ViewData["isFooter"] as bool? ?? true;
		}

		<!-- Navbar si activée -->
		@if (isNavbar)
		{
		<partial name="Sections/Navbar/_Navbar" />
		}

		<div class="container-fluid">
			<div class="row">
				<!-- Menu si activé -->
				@if (isMenu)
				{
				<div class="col-md-3 col-lg-2">
					<partial name="Sections/Menu/_VerticalMenu" />
				</div>
				}

				<!-- Contenu principal -->
				<div class='@(isMenu ? "col-md-9 col-lg-10" : "col-12")'>
					<main role="main" class="pb-3">
						@RenderBody()
					</main>
				</div>
			</div>
		</div>

		<!-- Footer si activé -->
		@if (isFooter)
		{
		<footer>
			<partial name="Sections/Footer/_Footer" />
		</footer>
		}

		<!-- Scripts du template -->
		<partial name="Sections/_Scripts" />

		<!-- Sections de scripts -->
		@RenderSection("VendorScripts", required: false)
		@RenderSection("PageScripts", required: false)

		<!-- Scripts ASP.NET -->
		@await RenderSectionAsync("Scripts", required: false)
	</body>
</html>