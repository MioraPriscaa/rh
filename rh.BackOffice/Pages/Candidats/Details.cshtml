@page
@model rh.BackOffice.Pages_Candidats.DetailsModel

@{
    ViewData["Title"] = "Fiche du candidat";
}

<h1 class="mb-4">Fiche du candidat</h1>

<!-- Infos Candidat -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-info text-white">
        <strong>Informations générales</strong>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Nom</dt>
            <dd class="col-sm-8">@Model.Candidat.Nom</dd>

            <dt class="col-sm-4 fw-semibold">Prénom</dt>
            <dd class="col-sm-8">@Model.Candidat.Prenom</dd>

            <dt class="col-sm-4 fw-semibold">Email</dt>
            <dd class="col-sm-8">@Model.Candidat.Email</dd>

            <dt class="col-sm-4 fw-semibold">Mot de passe</dt>
            <dd class="col-sm-8">••••••••</dd>

            <dt class="col-sm-4 fw-semibold">Pièce jointe</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Candidat.PieceJointe))
                {
                    <a href="@Url.Content(Model.Candidat.PieceJointe)" target="_blank" class="text-decoration-none">
                        Voir / Télécharger
                    </a>
                }
                else
                {
                    <span class="text-muted">Aucune pièce jointe</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            @if (!string.IsNullOrEmpty(Model.ReturnUrl))
            {
                <a href="@Model.ReturnUrl" class="btn btn-secondary">Retour</a>
            }
            else
            {
                <a asp-page="./Index" class="btn btn-secondary">Retour</a>
            }
        </div>
    </div>
</div>

<!-- Candidatures du candidat -->
@if (Model.Candidatures.Any())
{
    <h4 class="mb-3">Annonces auxquelles le candidat a postulé</h4>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Annonce</th>
                    <th>Statut</th>
                    <th>Date de fin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cand in Model.Candidatures)
                {
                    <tr>
                        <td>@cand.Annonce?.Libelle</td>
                        <td>
                            @if (cand.Statut != null)
                            {
                                <span class="badge @(cand.Statut.Libelle == "Accepté" ? "bg-success" :
                                                                                          cand.Statut.Libelle == "Refusé" ? "bg-danger" : "bg-warning")">
                        @cand.Statut.Libelle
                    </span>
                                        }
                            else
                            {
                                <span class="badge bg-secondary">En attente</span>
                            }
                        </td>
                        <td>@cand.Annonce?.DateFin?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted">Le candidat n'a postulé à aucune annonce.</p>
}
