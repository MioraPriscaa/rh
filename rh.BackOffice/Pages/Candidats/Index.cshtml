@page
@model rh.BackOffice.Pages_Candidats.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des candidats</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidat[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidat[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidat[0].Email)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Candidat[0].PieceJointe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.PieceJointe)
            </td>
            <td>
            
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
