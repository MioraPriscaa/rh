@page
@model rh.BackOffice.Pages_Candidats.IndexModel

@{
    ViewData["Title"] = "Liste des candidats";
}

<h1 class="mb-4">Liste des candidats</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Pièce jointe</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Candidat)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Prenom</td>
                    <td>@item.Email</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PieceJointe))
                        {
                            <a href="@Url.Content(item.PieceJointe)" target="_blank" class="badge bg-info text-decoration-none">
                                Voir / Télécharger
                            </a>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Aucune</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            Détails
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
